<%- include ("../../partials/header.ejs") %> <%- include ("../../partials/navbar-home.ejs") %>

        <body>
            <div class="container" style="margin-top: 100px;">
                <% result.articles.rows.forEach(article=>{ %>
                    <div class="card mt-2">
                        <div class="card-body">
                            <div class="card-title">
                                <h2>
                                    <%= article.title %>
                                </h2>
                            </div>
                        </div>
                        <div class="card-body">
                            <a href="/<%= article.slug %>" class="btn btn-success">Ler Artigo</a>
                        </div>
                    </div>
                    <% }) %>
                        <div class="d-flex justify-content-between mt-4">
                            <% if(result.page>2) {%>
                                <ul class="pagination">
                                    <li class="page-item"><a class="page-link"
                                            href="/articles/page/<%= result.page -1 %>">Previous</a></li>
                                </ul>

                                <% }else if(result.page==2){ %>
                                    <ul class="pagination">
                                        <li class="page-item"><a class="page-link" href="/">Previous</a></li>
                                    </ul>
                                    <% } %>

                                        <% if(result.next) {%>
                                            <ul class=" pagination">
                                                <li class="page-item"><a class="page-link"
                                                        href="/articles/page/<%= result.page +1 %>">Next</a>
                                                </li>
                                            </ul>
                                            <% } %>
                        </div>
            </div>
        </body>
        <%- include ('../../partials/footer.ejs') %>